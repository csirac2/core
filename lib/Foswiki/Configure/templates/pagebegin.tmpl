<#assign logout>
    <#if loggedin??>
        <form method="post" action="${scriptName}" enctype="multipart/form-data" name="logoutForm">
            <input type="hidden" name="time" value="${time}"  />
            <a href='#' class='foswikiRight' title="Logout of configure and return to the wiki" onclick="$(this)['closest']('form')['submit']();return false;">Logout</a>
            <input type="hidden" name="action" value="Logout">
        </form>
    </#if>
</#assign>

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
        "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
	<meta http-equiv="content-type" content="text/html; charset=utf-8" />
	<title>Foswiki Configuration</title>
	<meta content="noindex" name="robots" />
	<link type="image/x-icon" rel="icon" href="%RESOURCEURI%favicon.ico" />
	<link type="image/x-icon" rel="shortcut icon" href="%RESOURCEURI%favicon.ico" />

	<link type="text/css" media="all" rel="stylesheet" href="%RESOURCEURI%yui.css"></style>
	<link type="text/css" media="all" rel="stylesheet" href="%RESOURCEURI%base.css"></style>
	<link type="text/css" media="all" rel="stylesheet" href="%RESOURCEURI%pattern.css"></style>
	<link type="text/css" media="all" rel="stylesheet" href="%RESOURCEURI%jquery.nyroModal-1.6.2.css"></style>
	<link type="text/css" media="all" rel="stylesheet" href="%RESOURCEURI%styles.css"></style>
        <!-- The following block takes precedence over the external stylesheets, and
             must stay after them despite the small performance hit. -->
	<style type="text/css" media="all">
            .foswikiMakeVisible {
                display:inline;
            }
            .foswikiMakeVisibleInline {
                display:inline;
            }
            .foswikiMakeVisibleBlock {
                display:block;
            }
            .foswikiMakeHidden {
                display:none;
            }
          body.configureShowOneSection .configureToggleSection {
              display:none;
          }
          body.configureShowOneSection .configureShowSection {
              display:block;
          }
        </style>
	<script type="text/javascript" src="%RESOURCEURI%jquery-1.8.2.min.js"></script>
	<script type="text/javascript" src="%RESOURCEURI%jquery.nyroModal-1.6.2.min.js"></script>
	<script type="text/javascript" src="%RESOURCEURI%jquery.sticky.min.js"></script>
	<script type="text/javascript" src="%RESOURCEURI%scripts.js"></script>
</head>
<body class="configureShowOneSection">
<div class="section configurePageHeader">
    <#if loggedin??>
        <form method="post" action="${scriptName}" enctype="multipart/form-data" name="logoutForm">
            <input type="hidden" name="time" value="${time}"  />
            <a href='#' class='foswikiRight' title="Logout of configure and return to the wiki" onclick="$(this)['closest']('form')['submit']();return false;">Logout</a>
            <input type="hidden" name="action" value="Logout">
        </form>
    </#if>
    <div class="configureLogo">
        <a href="${scriptName}"><img src="%RESOURCEURI%?action=resource;resource=foswiki-logo.png" alt="Foswiki configuration" /></a>
    </div>
<input type="hidden" disabled="disabled"
       id="configureFeedbackWorkingText"
       title="I18n - Not form data"
       value="Working...">
<div class="configureFeedbackSummaryTable">
    <div class="configureFeedbackSummaryCell" id="{ConfigureGUI}{Unsaved}status"></div>
</div>
<#if messages??>
	<div class="foswikiNotification foswiki${style}" id="messages">
		${messages}
	</div>
</#if>
</div>
<div class="configurePageBodyWrapper"><form method="post" action="${formAction}" enctype="multipart/form-data" name="update">
<input type="hidden" name="time" value="${time}"  />
