%TMPL:DEF{"titlestep"}%<div class='foswikiFormStep'>%TMPL:P{"title"}%
%TMPL:P{"notestep"}%%TMPL:P{"errorstep"}%</div>%TMPL:END%

%TMPL:DEF{"notestep"}%%IF{"defined NOTE AND $NOTE != ''" then="<h3>%NOTE%</h3>"}%%TMPL:END%

